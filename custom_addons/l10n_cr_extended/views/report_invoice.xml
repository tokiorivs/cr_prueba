<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_inherit_l10n_cr_custom" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='informations']" position="inside">
            <div class="col-auto mw-100 mb-2" t-if="o.l10n_latam_document_type_id" name="document_type">
                <strong>Tipo de Documento:</strong>
                <p class="m-0" t-field="o.l10n_latam_document_type_id.name"/>
            </div>
        </xpath>

        <xpath expr="//div[@name='comment']" position="after">
            <div class="mt-3" t-if="o.electronic_number or o.electronic_consecutive" name="electronic_info">
                <div t-if="o.electronic_number">
                    <strong>Electronic Number:</strong>
                    <span t-field="o.electronic_number"/>
                </div>
                <div t-if="o.electronic_consecutive">
                    <strong>Electronic Consecutive:</strong>
                    <span t-field="o.electronic_consecutive"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
